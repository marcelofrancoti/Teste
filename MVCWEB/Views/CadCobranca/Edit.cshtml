@model MVCWEB.Models.CobrancaViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Editar Cobrança";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Cobranças Cadastradas</a></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <a class="btn btn-primary" href="@Url.Action("Index", "CadCobranca")">
                <span class="glyphicon glyphicon-menu-left"></span>
                Voltar
            </a>
        </div>
    </div>

    <br />

    <fieldset>
        <legend>Editar Cobrança</legend>

        @using (Html.BeginForm("Edit", "CadCobranca", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.HiddenFor(model => model.CobrancaId)

            <div class="form-group">
                @Html.LabelFor(model => model.DataCobranca, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.DataCobranca, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DataCobranca, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ClienteId, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.ClienteId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ClienteId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NomeCliente, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.NomeCliente, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NomeCliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProdutoId, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.ProdutoId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProdutoId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NomeProduto, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.NomeProduto, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NomeProduto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ValorCobranca, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.ValorCobranca, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ValorCobranca, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.InformacoesAdicionais, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.InformacoesAdicionais, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.InformacoesAdicionais, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        }
    </fieldset>
</div>

<style>
    body {
        padding-top: 20px;
    }

    fieldset {
        border: 1px solid #ddd;
        margin: 0;
        padding: 10px;
        border-radius: 4px;
        background-color: #ffffff;
    }

    legend {
        font-size: 18px;
        font-weight: bold;
        border: 0px;
        border-radius: 4px;
        padding: 5px 10px;
        background-color: #f5f5f5;
    }
</style>
